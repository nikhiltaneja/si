<h4 class="center">Progress Towards Premium Status</h4>

<div class="progress">
    <% if current_user.references.count >= 5 %>
      <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
        5+ Users Signed Up
      </div>
    <% elsif current_user.references.count == 4 %>
      <div class="progress-bar" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%;">
        4 Users Signed Up
      </div>
    <% elsif current_user.references.count == 3 %>
      <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
        3 Users Signed Up (60%)
      </div>
    <% elsif current_user.references.count == 2 %>
      <div class="progress-bar" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%;">
        2 Users Signed Up
      </div>
    <% elsif current_user.references.count == 1 %>
      <div class="progress-bar" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%;">
        1 User Signed Up
      </div>
    <% else %>
      <div role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 20%;">
        0 Users Signed Up
      </div>
    <% end %>
  </div>
