<div class="row">
  <div class="col-md-4 col-md-offset-1">
    <div class="row center">
      <%= image_tag @user.image, size: "250x250", alt: 'Profile Picture', class:'profile-picture' %>
    </div>
    <div class="row center">
      <h2><%= @user.name %></h2>
      <h4><%= @user.headline %></h4>
      <h4><%= @user.location.area %></h4>

      <% if @user.industry %>
        <h4>Industry: <%= @user.industry.name %></h4>
      <% end %>

      <h4><%= link_to "LinkedIn Profile", @user.public_profile, target: 'blank' %></h4>

      <% if @user.premium? %>
        <%= image_tag 'premium_badge.jpg', size: '70x60' %>
      <% end %>
    </div>
  </div>

  <div class="col-md-6 col-md-offset-1">
    <div class="row">
      <div>
        <% if @user.summary && !@user.summary.empty? %>
          <h3>Summary</h3>
          <p><%= @user.summary %></p>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div>
        <% if !@user.jobs.empty? %>
          <h3>Work Experience</h3>
          <% @user.jobs.sort.each do |job| %>
            <p><%= job.company.name %>, <%= job.position.name %> </p>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div>
        <% if !@user.educations.empty? %>
          <h3>Education</h3>
          <% @user.educations.sort.each do |education| %>
            <p><%= education.school.name %>
            <% if education.subject && !education.subject.name.nil? %>
              <%= education.degree.name %> <%= education.subject.name %> <%= education.year %></p>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div> 

    <div class="row">
      <div>
        <% if !@user.topic_interests.empty? || (@user.seeking && !@user.seeking.empty?) %>
            <h3>Interested In</h3>
        <% end %>

        <% if !@user.topic_interests.empty? %>
          <ul>
            <% @user.topic_interests.each do |topic_interest| %>
              <li><%= topic_interest.topic.name %> </li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <div>
        <% if @user.seeking %>
          <p><%= @user.seeking %></p>
        <% end %>
      </div>
    </div>

  </div>
</div>
