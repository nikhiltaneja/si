<div class="container">
  <%= form_for @user do |f| %>
    <div class="form-group">
      <h4>What industry best describes your line of work?</h4>
      <%= f.collection_select(:industry_id, Industry.all, :id, :name, include_blank: true) %>
    </div>

    <div class="form-group">
      <h4> Who are you interested in meeting? Professionals in: </h4>
      <% Industry.all.each do |industry| %>
        <% checked = current_user.industry_interests.pluck(:industry_id).include?(industry.id) %>
          <div class="checkbox">
            <label>
              <%= check_box_tag("industry_interests[]", industry.id, checked) %> <%= industry.name %>
            </label>
          </div>        
      <% end %>
    </div>

    <div class="form-group">
      <h4>Please write a one sentence summary that describes you (optional)</h4>
      <%= f.text_field :summary, class: 'form-control' %>
    </div>

    <%= f.submit "Submit", class:"btn btn-primary" %>
  <% end %>
</div>
