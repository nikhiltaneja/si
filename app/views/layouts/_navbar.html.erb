<div class="navbar navbar-inverse" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <div><%= link_to "SwiftIntro", root_path, class:"navbar-brand" %> </div>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <% if current_user.admin %>
            <li><%= link_to "Sidekiq", sidekiq_web_path %></li>
            <li><%= link_to "Admin", admins_path %></li>
          <% end %>

          <% if !current_user.matches.empty? %>
            <li><%= link_to "Current Match", user_match_path(current_user, current_user.current_match) %></li>
            <li><%= link_to "All Matches", user_matches_path(current_user) %></li>
          <% end %>

          <li><%= link_to "My Profile", user_path(current_user)%></li>
          <li><%= link_to "Logout", signout_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
