<div class = "new-message">
<%= form_for [@user, @match, @message] do |f| %>
    <%= f.label :Subject %>:
    <%= f.text_field :title, class: 'form-control' %><br />

    <%= f.label :Message %>:
    <%= f.text_area :body, class: 'form-control' %><br />
    
    <%= f.submit "Submit", class:"btn btn-primary" %>

  <% end %>
</div>