<div id = "user_border">
<div class="row">
  <div class="col-md-2 user">
    <%= image_tag @user.image, size: "140x140", id:"profile" %>

    <h4><%= @user.name %></h4>
    <h6><%= @user.headline %></h6>
    <h6><%= @user.location.area %></h6>
    <h6><%= link_to "LinkedIn Profile", @user.public_profile, target: 'blank' %></h6>
  </div>

  <div class="col-md-5">
    
    <h4>Work Experience</h4>
    <ul>
      <% @user.jobs.each do |job| %>
        <li><%= job.company.name %>, <%= job.position.name %> </li>
      <% end %>
    </ul>
  </div>

  <div class="col-md-5">
    <% if !@user.educations.empty? %>
      <h4>Education</h4>
      <ul>
        <% @user.educations.each do |education| %>
          <li><%= education.school.name %> <%= education.year %></li>
          <% if education.subject && !education.subject.name.nil? %>
            <ul>
              <li><%= education.degree.name %> <%= education.subject.name %></li>
            </ul>
          <% end %>
        <% end %>
      </ul>
    <% end %>

  </div>

</div> 

<div class="row">
  <div class="col-md-12">
  <% if @user.summary && !@user.summary.empty? %>
        <h4>Summary</h4>
        <p><%= @user.summary %></p>
    <% end %>
  </div>

</div>
</div>





  



  
