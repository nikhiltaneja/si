<div class="navbar navbar-inverse" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#swiftintro-navbar">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
      <div><%= link_to "SwiftIntro", root_path, class:"navbar-brand" %> </div>
    </div>
    <div class="navbar-collapse collapse" id="swiftintro-navbar">
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
        <li><%= link_to "Premium Features", user_premium_path(current_user) %></li>
        <li><%= link_to "Invite Friends", user_invite_path(current_user) %></li>
          <% if current_user.admin %>
            <li><%= link_to "Admin", admins_path %></li>
          <% end %>

          <% if !current_user.matches.empty? && current_user.approved == "Yes" %>

            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">All Matches<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Pending Matches", user_matches_path(current_user) %></li>
                <li><%= link_to "Prior Matches", user_matches_prior_matches_path(current_user)%></li>
              </ul>
            </li>

            <li><%= link_to "Current Match", user_match_path(current_user, current_user.current_match) %></li>
          <% end %>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">My Profile<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "View Profile", user_path(current_user)%></li>
              <li><%= link_to "Edit Profile", edit_user_path(current_user)%></li>
              <li><%= link_to "Profile Settings", user_settings_path(current_user)%></li>
            </ul>
          </li>

          <li><%= link_to "Logout", signout_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
