<div class="container">
  <%= form_for @user do |f| %>
    <div class="form-group">
      <h4>What industry are you in?</h4>
      <%= f.collection_select(:industry_id, Industry.all, :id, :name) %>
    </div>
    <!-- <p> Who are you interested in meeting? Professionals in: </p>
    <%= f.collection_select(:industry_interests, Industry.all, :id, :name) %>   -->

    <div class="form-group">
      <h4>Please write a one sentence summary that describe you (optional)</h4>
      <%= f.text_area :summary, size: '150' %>
    </div>

    <%= f.submit "Submit", class:"btn btn-primary" %>
  <% end %>
</div>
