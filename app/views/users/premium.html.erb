<div class="container">

  <p>To access these premium features you must sign up 5 or more users using your personal link: 
    <b>www.swiftintro.com/<%=@user.uid%></b>

    <%= render partial: 'users/twitter' %>
  </p>


  <%= form_for @user do |f| %>

    <% if @user.errors.any? %>
      <div id="error-explanation">
        <div class="alert alert-danger">
          The form contains <%= pluralize(@user.errors.count, "error") %>.
        </div>
        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li>* <%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <h4>How many matches would you like per week?</h4>
      <%= f.select :number_of_matches, options_for_select([@user.number_of_matches, @alternative]) %>
    </div>

    <%= f.submit "Submit", class:"btn btn-primary" %>
  <% end %>
</div>


